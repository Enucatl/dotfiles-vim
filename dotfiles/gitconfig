[user]
    name = Matteo Abis
    email = gmatteo..abis@gmail.com
[alias]
    unstage = reset HEAD
    ci = commit
    co = checkout
    amend = commit --amend
    aa = add --all
    pullff = pull --ff-only
    fa = fetch --all
    b = branch
    pullupstream = !"git fetch origin -v; git fetch upstream -v; git merge -X theirs upstream/master"
    diffwords = diff --color-words
    ours = "!f() { git checkout --ours $@ && git add $@; }; f"
    theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    s = status -sb
    export = "!f() { name=${PWD##*/}-$(git describe --always --abbrev=4 $1); git archive --prefix=$name -o $name.tar.gz $1; }; f"
[core]
    excludesfile = ~/.gitignore
[content]
    editor = gvim -w
[core]
    editor = gvim -f
    pager = less -r
    whitespace = trailing-space,space-before-tab
[merge]
    ff = always
[push]
    default = tracking
[color]
    ui = auto
    interactive = auto
[advice]
    pushNonFastForward = false
    commitBeforeMerge = false
    implicitIdentity = false
[difftool "diffpdf"]
    cmd = diffpdf \"$LOCAL\" \"$REMOTE\"
[help]
    autocorrect = 1
[credential]
	helper = lastpass
